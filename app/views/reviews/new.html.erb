<h1>Create a Review for <%= @game.title %>!</h1>

<%= form_for(@review) do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min: 0, max: 10 %> out of 10

  <br>

  <%= f.label :content %>
  <%= f.text_area :content, size: "50x10" %>

  <br>

  <%= f.hidden_field :game_id %>

  <%= f.submit %>
<% end %>