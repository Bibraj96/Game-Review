<h1>Add a New Game to Review!</h1>

<%= render partial: 'layouts/errors', locals: {object: @game} %>

<%= form_for(@game) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <p> Choose an existing genre for this game: </p>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%>

  <p> Create a new genre for this game: </p>
  <%= f.fields_for :genre do |genre| %>
    <%= genre.label :name %>
    <%= genre.text_field :name %>

  <% end %>

  <br><br>

  <%= f.submit %>
<% end %>