<div class="title-container">
  <h1>Add a New Game to Review!</h1>
</div>

<%= render partial: 'layouts/errors', locals: {object: @game} %>

<%= form_for(@game) do |f| %>
  <div class="form-group" style="max-width:400px">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <p> Choose an existing genre for this game: </p>
  <%= f.collection_select :genre_id, Genre.order_alph, :id, :name, {include_blank: 'Choose a Genre'}, {class: "form-control"}%>

  <p> Or create a new genre for this game: </p>

  <%= f.fields_for :genre do |genre| %>
    <div class="form-group" style="max-width:400px">
      <%= genre.label :name %>
      <%= genre.text_field :name, class: "form-control" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>